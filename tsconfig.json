{
	"compilerOptions": {
		"target": "es2017",
		"strict": true,
		"jsx": "react",
		"lib": [
			"DOM",
			"ES2020",
			"ESNext"
		],
		"typeRoots": [
			"@types",
			"./node_modules/@types"
		],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"pretty": true,
		"types": ["node"],
		"sourceMap": true,
		"outDir": "./build",
		"allowJs": true,
		"noEmit": false,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {}
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"tests"
	]
}